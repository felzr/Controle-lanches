<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fundo"

    tools:context=".Activitys.MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/telefone"
        android:src="@drawable/telefone"
        android:onClick="Fornecedor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="133dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/novopedido"
        android:src="@drawable/novopedido"
        android:layout_above="@+id/telefone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="novopedido"
        android:layout_marginBottom="77dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/relatorios"
        android:onClick="Relatorio"
        android:layout_below="@+id/novopedido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cesta"
        android:src="@drawable/cesta"
        android:onClick="consultapedido"
        android:layout_alignTop="@+id/novopedido"
        android:layout_alignLeft="@+id/telefone"
        android:layout_alignStart="@+id/telefone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="  Novo Pedido"
        android:id="@+id/novopedidotexto"
        android:layout_below="@+id/cesta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="   Pedidos"
        android:layout_below="@+id/cesta"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/cesta"
        android:layout_alignStart="@+id/cesta"
        android:id="@+id/pedidotexto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Fornecedor"
        android:id="@+id/textotelefone"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/telefone"
        android:layout_alignStart="@+id/telefone"
        android:layout_alignBottom="@+id/relatoriotexto" />

    <TextView
        android:text="Controle de Lanches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="     Menu"
        android:id="@+id/relatoriotexto"
        android:layout_below="@+id/imageView3"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>

